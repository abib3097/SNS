<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (category.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Category</th>
						<th scope="col">Parent</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% category.forEach((player, index) => { %>
                        <tr>
                            <th scope="row"><%= player.name %></th>
							<th scope="row"><%= player.top %></th>
                           
                         
                            <td>
                                <a href="/write/<%= player.name %>"rel="noopener" class="btn btn-sm btn-success">Select</a>
                               
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html>